<UserControl x:Class="DownloaderTaskClassWork.progressUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DownloaderTaskClassWork"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="660" Width="660" Height="100">
    <StackPanel>
        <Label Content="{Binding FileName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="Red" FontSize="20" Height="50"></Label>
        <ProgressBar x:Name="progressBar" Height="50"></ProgressBar>
    </StackPanel>
</UserControl>
